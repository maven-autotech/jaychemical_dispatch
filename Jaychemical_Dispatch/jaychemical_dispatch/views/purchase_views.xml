<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="po_inherit_view_form_custom_own" model="ir.ui.view">
        <field name="name">po.inherited.view.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="before">
                <field name="line_no"/>
                <field name="lot_number"/>
<!--                <field name="unit_of_measurement"/>-->
                <field name="pack_size"/>
                <field name="total_qty"/>
            </xpath>
            <field name="order_line" context="{'group_by': 'product_code'}"/>
        </field>
    </record>

    <record id="purchase_order_kpis_tree" model="ir.ui.view">
        <field name="name">purchase.order.inherit.purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <header>
                    <button name="action_confirm" string="Confirm" class="btn-primary" type="object"/>
                </header>
            </xpath>
        </field>
    </record>

</odoo>

